<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobserve.weew.weew.EditProfile"
    tools:showIn="@layout/activity_edit_profile">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageview_profile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:padding="32dp"
        android:background="#B3F6E3"
        android:layout_marginBottom="16dp"
        />

    <EditText
        android:id="@+id/edittext_new_username"
        android:hint="Username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/imageview_profile"
        android:layout_marginTop="21dp"
        android:background="#B9D5B9"
        android:layout_toEndOf="@+id/textViewUsername" />

    <EditText
        android:id="@+id/edittext_new_password"
        android:hint="Password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/edittext_new_username"
        android:layout_marginTop="21dp"
        android:background="#B9D5B9"
        android:layout_toEndOf="@+id/textViewUsername" />

    <EditText
        android:id="@+id/edittext_new_date_of_birth"
        android:hint="Date of Birth"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/edittext_new_password"
        android:layout_marginTop="21dp"
        android:background="#B9D5B9"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="New Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittext_new_date_of_birth"
        android:layout_alignStart="@+id/textViewUsername"
        android:id="@+id/textView2"
        android:background="#DF5B5A"
        android:layout_alignTop="@+id/edittext_new_password" />

    <TextView
        android:text="New Tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittext_new_tags"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView4"
        android:background="#DF5B5A"
        android:layout_alignTop="@+id/edittext_new_tags" />

    <TextView
        android:text="New Date of Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/edittext_new_date_of_birth"
        android:layout_alignStart="@+id/textView4"
        android:background="#DF5B5A"
        android:layout_alignTop="@+id/edittext_new_date_of_birth" />

    <TextView
        android:text="New Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:id="@+id/textViewUsername"
        android:background="#DF5B5A"
        android:layout_alignBottom="@+id/edittext_new_username"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edittext_new_username" />

    <EditText
        android:id="@+id/edittext_new_tags"
        android:hint="Tags"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="19dp"
        android:background="#B9D5B9"
        android:layout_below="@+id/edittext_new_date_of_birth"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"/>

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_new_tags"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/button2" />


</RelativeLayout>
